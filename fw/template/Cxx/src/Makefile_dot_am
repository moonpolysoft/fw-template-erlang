SUBDIRS =

INCLUDES = @FW_PKGCONFIG_PREREQS_CFLAGS@ 

myincludedir = $(includedir)/@PACKAGE_NAME@-@FW_PACKAGE_MAJOR_VERSION@/

myinclude_HEADERS =					\
  @PACKAGE@.hh						\
  $(filter-out @PACKAGE@.hh, $(wildcard *.hh))

@PACKAGE@.hh: $(filter-out @PACKAGE@.hh, $(wildcard *.hh))
	@(echo "/* Do not edit this file, it is autogenerated. */";	  \
	  echo "";							  \
	  for x in *.hh;						  \
	    do								  \
	      if test "$$x" != "@PACKAGE@.hh"; 				  \
		then							  \
		  echo "#include<$$x>";  				  \
		fi							  \
	    done) > $@

CLEANFILES =		\
  @PACKAGE@.hh

MAINTAINERCLEANFILES =	\
  Makefile.am		\
  Makefile.in

EXTRA_DIST =					\
  $(filter-out @PACKAGE@.hh, $(wildcard *.hh))

include $(top_srcdir)/src/Makefile.am.local
